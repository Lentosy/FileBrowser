<UserControl x:Class="FileBrowser.Controls.CategoryUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileBrowser.Controls"
             xmlns:properties="clr-namespace:FileBrowser.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Label Content="{x:Static properties:Resources.LabelSelectCategory}"/>
        <ComboBox SelectedItem="{Binding SelectedCategory}" ItemsSource="{Binding Categories}"></ComboBox>
    </StackPanel>
</UserControl>
